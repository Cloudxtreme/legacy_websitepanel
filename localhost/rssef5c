&lt;p style="line-height: normal; margin: 0in 0in 0pt; tab-stops: 45.8pt 91.6pt 137.4pt 183.2pt 229.0pt 274.8pt 320.6pt 366.4pt 412.2pt 458.0pt 503.8pt 549.6pt 595.4pt 641.2pt 687.0pt 732.8pt;" class="MsoNormal"&gt;&lt;span style="font-family: 'Times New Roman','serif'; font-size: 9.5pt;" lang="TR"&gt;&lt;span style="mso-spacerun: yes;"&gt;&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp; &lt;/span&gt;&amp;lt;vmconfig computerName="true|false"&lt;o:p&gt;&lt;/o:p&gt;&lt;/span&gt;&lt;/p&gt;
&lt;p style="line-height: normal; margin: 0in 0in 0pt; tab-stops: 45.8pt 91.6pt 137.4pt 183.2pt 229.0pt 274.8pt 320.6pt 366.4pt 412.2pt 458.0pt 503.8pt 549.6pt 595.4pt 641.2pt 687.0pt 732.8pt;" class="MsoNormal"&gt;&lt;span style="font-family: 'Times New Roman','serif'; font-size: 9.5pt;" lang="TR"&gt;&lt;span style="mso-spacerun: yes;"&gt;&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp; &lt;/span&gt;administratorPassword="true|false"&lt;o:p&gt;&lt;/o:p&gt;&lt;/span&gt;&lt;/p&gt;
&lt;p style="line-height: normal; margin: 0in 0in 0pt; tab-stops: 45.8pt 91.6pt 137.4pt 183.2pt 229.0pt 274.8pt 320.6pt 366.4pt 412.2pt 458.0pt 503.8pt 549.6pt 595.4pt 641.2pt 687.0pt 732.8pt;" class="MsoNormal"&gt;&lt;span style="font-family: 'Times New Roman','serif'; font-size: 9.5pt;" lang="TR"&gt;&lt;span style="mso-spacerun: yes;"&gt;&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp; &lt;/span&gt;networkAdapters="true|false" /&amp;gt;&lt;o:p&gt;&lt;/o:p&gt;&lt;/span&gt;&lt;/p&gt;
&lt;p style="line-height: normal; margin: 0in 0in 0pt; tab-stops: 45.8pt 91.6pt 137.4pt 183.2pt 229.0pt 274.8pt 320.6pt 366.4pt 412.2pt 458.0pt 503.8pt 549.6pt 595.4pt 641.2pt 687.0pt 732.8pt;" class="MsoNormal"&gt;&lt;span style="font-family: 'Times New Roman','serif'; font-size: 9.5pt;" lang="TR"&gt;&lt;span style="mso-spacerun: yes;"&gt;&amp;nbsp;&amp;nbsp;&amp;nbsp; &lt;/span&gt;&amp;lt;/provisioning&amp;gt;&lt;o:p&gt;&lt;/o:p&gt;&lt;/span&gt;&lt;/p&gt;
&lt;p style="line-height: normal; margin: 0in 0in 0pt; tab-stops: 45.8pt 91.6pt 137.4pt 183.2pt 229.0pt 274.8pt 320.6pt 366.4pt 412.2pt 458.0pt 503.8pt 549.6pt 595.4pt 641.2pt 687.0pt 732.8pt;" class="MsoNormal"&gt;&lt;span style="font-family: 'Times New Roman','serif'; font-size: 9.5pt;" lang="TR"&gt;&lt;span style="mso-spacerun: yes;"&gt;&amp;nbsp; &lt;/span&gt;&amp;lt;/item&amp;gt;&lt;o:p&gt;&lt;/o:p&gt;&lt;/span&gt;&lt;/p&gt;
&lt;p style="line-height: normal; margin: 0in 0in 0pt; tab-stops: 45.8pt 91.6pt 137.4pt 183.2pt 229.0pt 274.8pt 320.6pt 366.4pt 412.2pt 458.0pt 503.8pt 549.6pt 595.4pt 641.2pt 687.0pt 732.8pt;" class="MsoNormal"&gt;&lt;span style="font-family: 'Times New Roman','serif'; font-size: 9.5pt;" lang="TR"&gt;&lt;span style="mso-spacerun: yes;"&gt;&amp;nbsp; &lt;/span&gt;&amp;lt;item path="item2"&amp;gt;&lt;o:p&gt;&lt;/o:p&gt;&lt;/span&gt;&lt;/p&gt;
&lt;p style="line-height: normal; margin: 0in 0in 0pt; tab-stops: 45.8pt 91.6pt 137.4pt 183.2pt 229.0pt 274.8pt 320.6pt 366.4pt 412.2pt 458.0pt 503.8pt 549.6pt 595.4pt 641.2pt 687.0pt 732.8pt;" class="MsoNormal"&gt;&lt;span style="font-family: 'Times New Roman','serif'; font-size: 9.5pt;" lang="TR"&gt;&lt;span style="mso-spacerun: yes;"&gt;&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp; &lt;/span&gt;... &lt;o:p&gt;&lt;/o:p&gt;&lt;/span&gt;&lt;/p&gt;
&lt;p style="line-height: normal; margin: 0in 0in 0pt; tab-stops: 45.8pt 91.6pt 137.4pt 183.2pt 229.0pt 274.8pt 320.6pt 366.4pt 412.2pt 458.0pt 503.8pt 549.6pt 595.4pt 641.2pt 687.0pt 732.8pt;" class="MsoNormal"&gt;&lt;span style="font-family: 'Times New Roman','serif'; font-size: 9.5pt;" lang="TR"&gt;&lt;span style="mso-spacerun: yes;"&gt;&amp;nbsp; &lt;/span&gt;&amp;lt;/item&amp;gt; &lt;o:p&gt;&lt;/o:p&gt;&lt;/span&gt;&lt;/p&gt;
&lt;p style="line-height: normal; margin: 0in 0in 0pt; tab-stops: 45.8pt 91.6pt 137.4pt 183.2pt 229.0pt 274.8pt 320.6pt 366.4pt 412.2pt 458.0pt 503.8pt 549.6pt 595.4pt 641.2pt 687.0pt 732.8pt;" class="MsoNormal"&gt;&lt;span style="font-family: 'Times New Roman','serif'; font-size: 9.5pt;" lang="TR"&gt;&lt;span style="mso-spacerun: yes;"&gt;&amp;nbsp; &lt;/span&gt;&amp;lt;item path="item3"&amp;gt;&lt;o:p&gt;&lt;/o:p&gt;&lt;/span&gt;&lt;/p&gt;
&lt;p style="line-height: normal; margin: 0in 0in 0pt; tab-stops: 45.8pt 91.6pt 137.4pt 183.2pt 229.0pt 274.8pt 320.6pt 366.4pt 412.2pt 458.0pt 503.8pt 549.6pt 595.4pt 641.2pt 687.0pt 732.8pt;" class="MsoNormal"&gt;&lt;span style="font-family: 'Times New Roman','serif'; font-size: 9.5pt;" lang="TR"&gt;&lt;span style="mso-spacerun: yes;"&gt;&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp; &lt;/span&gt;... &lt;o:p&gt;&lt;/o:p&gt;&lt;/span&gt;&lt;/p&gt;
&lt;p style="line-height: normal; margin: 0in 0in 0pt; tab-stops: 45.8pt 91.6pt 137.4pt 183.2pt 229.0pt 274.8pt 320.6pt 366.4pt 412.2pt 458.0pt 503.8pt 549.6pt 595.4pt 641.2pt 687.0pt 732.8pt;" class="MsoNormal"&gt;&lt;span style="font-family: 'Times New Roman','serif'; font-size: 9.5pt;" lang="TR"&gt;&lt;span style="mso-spacerun: yes;"&gt;&amp;nbsp; &lt;/span&gt;&amp;lt;/item&amp;gt;&lt;o:p&gt;&lt;/o:p&gt;&lt;/span&gt;&lt;/p&gt;
&lt;p style="line-height: normal; margin: 0in 0in 0pt; tab-stops: 45.8pt 91.6pt 137.4pt 183.2pt 229.0pt 274.8pt 320.6pt 366.4pt 412.2pt 458.0pt 503.8pt 549.6pt 595.4pt 641.2pt 687.0pt 732.8pt;" class="MsoNormal"&gt;&lt;span style="font-family: 'Times New Roman','serif'; font-size: 9.5pt;" lang="TR"&gt;&lt;span style="mso-spacerun: yes;"&gt;&amp;nbsp; &lt;/span&gt;... &lt;o:p&gt;&lt;/o:p&gt;&lt;/span&gt;&lt;/p&gt;
&lt;p style="line-height: normal; margin: 0in 0in 0pt; tab-stops: 45.8pt 91.6pt 137.4pt 183.2pt 229.0pt 274.8pt 320.6pt 366.4pt 412.2pt 458.0pt 503.8pt 549.6pt 595.4pt 641.2pt 687.0pt 732.8pt;" class="MsoNormal"&gt;&lt;span style="font-family: 'Times New Roman','serif'; font-size: 9.5pt;" lang="TR"&gt;&amp;lt;/items&amp;gt;&lt;o:p&gt;&lt;/o:p&gt;&lt;/span&gt;&lt;/p&gt;
&lt;ul style="margin-top: 0in;" type="disc"&gt;
&lt;li style="line-height: normal; margin: 0in 0in 0pt; tab-stops: list .5in; mso-list: l0 level1 lfo1;" class="MsoNormal"&gt;&lt;i&gt;&lt;span style="font-family: 'Times New Roman','serif'; font-size: 9.5pt;" lang="TR"&gt;path&lt;/span&gt;&lt;/i&gt;&lt;span style="font-family: 'Times New Roman','serif'; font-size: 9.5pt;" lang="TR"&gt; &amp;ndash; VHD dosyasının .VHD uzantısı olmadan adıdır, &amp;ouml;rneğin &amp;ldquo;Windows Server 2008 x64&amp;rdquo;. Bu &amp;ouml;znitelik zorunludur. &lt;o:p&gt;&lt;/o:p&gt;&lt;/span&gt;&lt;/li&gt;
&lt;li style="line-height: normal; margin: 0in 0in 0pt; tab-stops: list .5in; mso-list: l0 level1 lfo1;" class="MsoNormal"&gt;&lt;i&gt;&lt;span style="font-family: 'Times New Roman','serif'; font-size: 9.5pt;" lang="TR"&gt;diskSize &lt;/span&gt;&lt;/i&gt;&lt;span style="font-family: 'Times New Roman','serif'; font-size: 9.5pt;" lang="TR"&gt;&amp;ndash; VHD'nin gigabyte cinsinden dahili boyutudur (VHD'deki ilk disk biriminin boyutu). Bu değer VPS oluşturma sırasında kullanılır. Eğer VPS i&amp;ccedil;in tahsis edilmiş &amp;ldquo;HDD&amp;rdquo; kotası belirlenen VHD boyutundan az ise, VPS oluşturulmayacak ve hata g&amp;ouml;r&amp;uuml;nt&amp;uuml;lenecektir. Ancak bu &amp;ouml;znitelik opsiyoneldir ve belirlenmemesi veya 0 (&amp;ldquo;sıfır&amp;rdquo;) olması halinde, VPS oluşturma sırasında disk boyutu onaylanmayacaktır. &lt;o:p&gt;&lt;/o:p&gt;&lt;/span&gt;&lt;/li&gt;
&lt;li style="line-height: normal; margin: 0in 0in 0pt; tab-stops: list .5in; mso-list: l0 level1 lfo1;" class="MsoNormal"&gt;&lt;i&gt;&lt;span style="font-family: 'Times New Roman','serif'; font-size: 9.5pt;" lang="TR"&gt;legacyNetworkAdapter&lt;/span&gt;&lt;/i&gt;&lt;span style="font-family: 'Times New Roman','serif'; font-size: 9.5pt;" lang="TR"&gt; &amp;ndash; sanal bilgisayarda oluşturulacak ağ adapt&amp;ouml;r&amp;uuml; t&amp;uuml;r&amp;uuml;n&amp;uuml; belirler: &lt;b&gt;synthetic&lt;/b&gt; (&amp;ldquo;T&amp;uuml;mleştirme Hizmetlerinin&amp;rdquo; bulunduğu yeni Microsoft işletim sistemleri i&amp;ccedil;in) veya &lt;b&gt;legacy&lt;/b&gt; (Windows XP &amp;ouml;ncesi Microsoft işletim sistemleri veya Linux gibi Microsoft harici işletim sistemleri i&amp;ccedil;in). "legacyNetworkAdapter" &amp;ouml;zniteliği belirlenmediğinde, varsayılan değer "synthetic" şeklindedir. &lt;o:p&gt;&lt;/o:p&gt;&lt;/span&gt;&lt;/li&gt;
&lt;li style="line-height: normal; margin: 0in 0in 0pt; tab-stops: list .5in; mso-list: l0 level1 lfo1;" class="MsoNormal"&gt;&lt;i&gt;&lt;span style="font-family: 'Times New Roman','serif'; font-size: 9.5pt;" lang="TR"&gt;remoteDesktop &lt;/span&gt;&lt;/i&gt;&lt;span style="font-family: 'Times New Roman','serif'; font-size: 9.5pt;" lang="TR"&gt;&amp;ndash; ziyaret&amp;ccedil;i OS'de uzak masa&amp;uuml;st&amp;uuml;n&amp;uuml;n etkinleştirilmiş ve VPS'ye Uzak Masa&amp;uuml;st&amp;uuml; Web Bağlantısı (RDWC) ile erişim sağlanabiliyor olup olmadığını belirler. Eğer remoteDesktop değeri &amp;ldquo;true&amp;rdquo; şeklinde ise RDWC bulunan bir bağlantı VPS &amp;ouml;zellikleri &amp;ldquo;Genel&amp;rdquo; sekmesinde g&amp;ouml;r&amp;uuml;nt&amp;uuml;lenecektir. Bu &amp;ouml;znitelik belirlenmediğinde, varsayılan olarak RDWC bağlantısı gizlenecektir: &lt;o:p&gt;&lt;/o:p&gt;&lt;/span&gt;&lt;/li&gt;
&lt;li style="line-height: normal; margin: 0in 0in 0pt; tab-stops: list .5in; mso-list: l0 level1 lfo1;" class="MsoNormal"&gt;&lt;i&gt;&lt;span style="font-family: 'Times New Roman','serif'; font-size: 9.5pt;" lang="TR"&gt;name&lt;/span&gt;&lt;/i&gt;&lt;span style="font-family: 'Times New Roman','serif'; font-size: 9.5pt;" lang="TR"&gt; &amp;ndash; OS şablonunun ekran adıdır. Bu, VPS oluşturma sihirbazındaki a&amp;ccedil;ılır listede g&amp;ouml;sterilen değerdir. &lt;o:p&gt;&lt;/o:p&gt;&lt;/span&gt;&lt;/li&gt;
&lt;li style="line-height: normal; margin: 0in 0in 0pt; tab-stops: list .5in; mso-list: l0 level1 lfo1;" class="MsoNormal"&gt;&lt;i&gt;&lt;span style="font-family: 'Times New Roman','serif'; font-size: 9.5pt;" lang="TR"&gt;description&lt;/span&gt;&lt;/i&gt;&lt;span style="font-family: 'Times New Roman','serif'; font-size: 9.5pt;" lang="TR"&gt; &amp;ndash; OS şablonunun a&amp;ccedil;ıklamasıdır. Şu anda kullanılmamaktadır. &lt;o:p&gt;&lt;/o:p&gt;&lt;/span&gt;&lt;/li&gt;
&lt;li style="line-height: normal; margin: 0in 0in 0pt; tab-stops: list .5in; mso-list: l0 level1 lfo1;" class="MsoNormal"&gt;&lt;i&gt;&lt;span style="font-family: 'Times New Roman','serif'; font-size: 9.5pt;" lang="TR"&gt;provisioning &amp;ndash; denetim se&amp;ccedil;eneklerini i&amp;ccedil;eren opsiyonel &amp;ouml;ğedir.&lt;/span&gt;&lt;/i&gt;&lt;span style="font-family: 'Times New Roman','serif'; font-size: 9.5pt;" lang="TR"&gt; &lt;o:p&gt;&lt;/o:p&gt;&lt;/span&gt;&lt;/li&gt;
&lt;li style="line-height: normal; margin: 0in 0in 0pt; tab-stops: list .5in; mso-list: l0 level1 lfo1;" class="MsoNormal"&gt;&lt;i&gt;&lt;span style="font-family: 'Times New Roman','serif'; font-size: 9.5pt;" lang="TR"&gt;sysprep &amp;ndash; VHD i&amp;ccedil;inde VHD denetimi sırasında işlenmesi gereken bir dosya belirler. Dosya, DNP şablonu değişkenlerini ve talimatlarını i&amp;ccedil;erebilir. DNP yalnızca ilk VHD birimine erişim sağladığından &amp;ldquo;dosya&amp;rdquo; &amp;ouml;zniteliği g&amp;ouml;reli yolu (s&amp;uuml;r&amp;uuml;c&amp;uuml; harfi olmadan) VHD i&amp;ccedil;indeki dosyaya g&amp;ouml;re belirlemelidir, &amp;ouml;rneğin &amp;ldquo;\Windows\System32\sysprep\unattend.xml&amp;rdquo;. Birden fazla dosyanın işlenmesi i&amp;ccedil;in herhangi bir sayıda &amp;ldquo;sysprep&amp;rdquo; &amp;ouml;ğesi olabilir.&lt;/span&gt;&lt;/i&gt;&lt;span style="font-family: 'Times New Roman','serif'; font-size: 9.5pt;" lang="TR"&gt; &lt;o:p&gt;&lt;/o:p&gt;&lt;/span&gt;&lt;/li&gt;
&lt;li style="line-height: normal; margin: 0in 0in 0pt; tab-stops: list .5in; mso-list: l0 level1 lfo1;" class="MsoNormal"&gt;&lt;i&gt;&lt;span style="font-family: 'Times New Roman','serif'; font-size: 9.5pt;" lang="TR"&gt;vmconfig &amp;ndash;&lt;/span&gt;&lt;/i&gt;&lt;span style="font-family: 'Times New Roman','serif'; font-size: 9.5pt;" lang="TR"&gt; VPS denetimi sırasında hangi VmConfig hizmet mod&amp;uuml;llerinin y&amp;uuml;r&amp;uuml;t&amp;uuml;leceğini belirleyen opsiyonel &amp;ouml;ğedir. Denetim aşamasında VmConfig kullanılması, eklenmemiş kurulum yanıt dosyasında bazı ayarların yapılandırılmasının zor, hatta olanaksız olduğu durumlarda faydalı olabilir. &amp;Ouml;rneğin, Windows XP şablonunda bilgisayar adını ve y&amp;ouml;netici şifresini yapılandırmak i&amp;ccedil;in VmConfig aracıyla yapılandırılan yanıt dosyasını ve ağ adapt&amp;ouml;rlerini kullanabilirsiniz (yanıt dosyasında parametreleri tanımlamak olduk&amp;ccedil;a zordur). Diğer taraftan, Windows Server 2008 ve Windows Vista yanıt dosyasıyla tamamen yapılandırılabilir (bu kılavuzda anlatılmaktadır); b&amp;ouml;ylece bu b&amp;ouml;l&amp;uuml;m g&amp;ouml;z ardı edilebilir. &lt;o:p&gt;&lt;/o:p&gt;&lt;/span&gt;&lt;/li&gt;
&lt;ul style="margin-top: 0in;" type="disc"&gt;
&lt;li style="line-height: normal; margin: 0in 0in 0pt; tab-stops: list 1.0in; mso-list: l0 level2 lfo1;" class="MsoNormal"&gt;&lt;i&gt;&lt;span style="font-family: 'Times New Roman','serif'; font-size: 9.5pt;" lang="TR"&gt;computerName &amp;ndash; &amp;ldquo;Bilgisayar adı değiştir&amp;rdquo; VmConfig g&amp;ouml;revinin VPS denetimi sırasında y&amp;uuml;r&amp;uuml;t&amp;uuml;l&amp;uuml;p y&amp;uuml;r&amp;uuml;t&amp;uuml;lmeyeceğini belirler. &amp;ldquo;true&amp;rdquo; g&amp;ouml;revin y&amp;uuml;r&amp;uuml;t&amp;uuml;leceği anlamına gelir;&lt;/span&gt;&lt;/i&gt;&lt;span style="font-family: 'Times New Roman','serif'; font-size: 9.5pt;" lang="TR"&gt; &lt;o:p&gt;&lt;/o:p&gt;&lt;/span&gt;&lt;/li&gt;
&lt;li style="line-height: normal; margin: 0in 0in 0pt; tab-stops: list 1.0in; mso-list: l0 level2 lfo1;" class="MsoNormal"&gt;&lt;i&gt;&lt;span style="font-family: 'Times New Roman','serif'; font-size: 9.5pt;" lang="TR"&gt;administratorPassword &amp;ndash; &amp;ldquo;Y&amp;ouml;netici şifresi değiştir&amp;rdquo; VmConfig g&amp;ouml;revinin VPS denetimi sırasında y&amp;uuml;r&amp;uuml;t&amp;uuml;l&amp;uuml;p y&amp;uuml;r&amp;uuml;t&amp;uuml;lmeyeceğini belirler. &amp;ldquo;true&amp;rdquo; g&amp;ouml;revin y&amp;uuml;r&amp;uuml;t&amp;uuml;leceği anlamına gelir;&lt;/span&gt;&lt;/i&gt;&lt;span style="font-family: 'Times New Roman','serif'; font-size: 9.5pt;" lang="TR"&gt; &lt;o:p&gt;&lt;/o:p&gt;&lt;/span&gt;&lt;/li&gt;
&lt;li style="line-height: normal; margin: 0in 0in 0pt; tab-stops: list 1.0in; mso-list: l0 level2 lfo1;" class="MsoNormal"&gt;&lt;i&gt;&lt;span style="font-family: 'Times New Roman','serif'; font-size: 9.5pt;" lang="TR"&gt;networkAdapters &amp;ndash; &amp;ldquo;Ağ adapt&amp;ouml;rleri ayarla&amp;rdquo; VmConfig g&amp;ouml;revinin VPS denetimi sırasında y&amp;uuml;r&amp;uuml;t&amp;uuml;l&amp;uuml;p y&amp;uuml;r&amp;uuml;t&amp;uuml;lmeyeceğini belirler. &amp;ldquo;true&amp;rdquo; g&amp;ouml;revin y&amp;uuml;r&amp;uuml;t&amp;uuml;leceği anlamına gelir;&lt;/span&gt;&lt;/i&gt;&lt;span style="font-family: 'Times New Roman','serif'; font-size: 9.5pt;" lang="TR"&gt; &lt;o:p&gt;&lt;/o:p&gt;&lt;/span&gt;&lt;/li&gt;
